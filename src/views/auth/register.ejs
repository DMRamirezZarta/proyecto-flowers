<!-- ///////////////////////////////////////// REGISTER FORM /////////////////////////////////////  -->

    <div class="register-container">
        <div class="register-form">
            <h2 class="register-title">Registro</h2>
            <form action="/register" method="post">
                <label for="username" class="register-label">Usuario</label>
                <input type="text" id="username" name="username" class="register-input" placeholder="Ingrese su usuario">
                <label for="email" class="register-label">Correo Electrónico</label>
                <input type="email" id="email" name="email" class="register-input" placeholder="Ingrese su correo electrónico">
                <label for="password" class="register-label">Contraseña</label>
                <input type="password" id="password" name="password" class="register-input" placeholder="Ingrese su contraseña">
                <label for="confirm-password" class="register-label">Confirmar Contraseña</label>
                <input type="password" id="confirm-password" name="confirm-password" class="register-input" placeholder="Confirme su contraseña">
                <button type="submit" class="register-button">Registrarse</button>
            </form>
            <p class="register"> Ya tienes una cuenta! <a  class="register-link" href="./login.html">Inicia Sesión</a></p>
        </div>
    </div>

